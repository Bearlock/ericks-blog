---
import type { CollectionEntry } from "astro:content";
import { createExcerpt } from "../utils/create-excerpt"

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
---

<div class="post">
  <h4 class="post-date">{post.data.date.toISOString().slice(0,10)}</h4>
  <h3 class="post-title"><a href=`/posts/${post.slug}`>{post.data.title}</a></h3>
  <p>{`${createExcerpt(post.body).substring(0, 300)}...`}</p>
  <br />
</div>
